# /etc/systemd/system/agent.service
[Unit]
Description=Agent Service Montoring
After=network.target

[Service]
ExecStart=/usr/bin/node /opt/agent.js #or whatever home directory is you system
Restart=always
RestartSec=5
User=mpredestin #user
Group=moderators #group with user
Environment=NODE_ENV=production
StandardOutput=append:/var/log/agent.log
StandardError=append:/var/log/agent-error.log

[Install]
WantedBy=multi-user.target
